.container{
    padding-bottom: 100rpx;
}
.header {
    padding: 30rpx;
    display: flex;
}

.header image {
    flex: 1;
    width: 100%;
    height: 250rpx;
}

.msg {
    flex: 2.5;
    padding-left: 30rpx;
    padding-top: 40rpx;
}

.bookNm {
    font-weight: bolder;
    font-size: 36rpx;
}

.decription {
    padding: 30rpx;
    text-indent: 2em;
    line-height: 50rpx;
    font-size: 34rpx;
}

.auth {
    font-size: 34rpx;
    padding-top: 10rpx;
    color: #666;
}

.note {
    font-size: 40rpx;
    padding: 0 30rpx;
    font-weight: bolder;
}

.section {
    padding: 30rpx;
    border-bottom: 2rpx solid #ccc;
}

.footer {
    position: fixed;
    width: 100%;
    left: #63b8ff;
    bottom: 0;
    display: flex;
    height: 100rpx;
    box-shadow: 0 -2rpx 0 #999;
    z-index: 10;
    align-items: center;
}

.footer view {
    flex: 1;
    text-align: center;
    background: #fff;
    font-size: 26rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color:#63b8ff;
}

.footer .read {
    background: #63b8ff;
    color: #fff;
}

.footer image {
    width: 50rpx;
    height: 45rpx;
}
